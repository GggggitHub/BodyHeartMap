<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/controls_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/image_view"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/body_origin_img"
            android:layout_gravity="center"
            />
        <com.example.bodyheartmap.OpenGlxyz
            android:id="@+id/xyz"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@android:color/transparent"
            />
        <com.example.bodyheartmap.HeatMapView
            android:id="@+id/heat_map_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@android:color/transparent"
           />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/controls_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_simulate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始模拟"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 在适当位置添加缩放控制按钮 -->
            <Button
                android:id="@+id/btn_zoom_in"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_zoom_out"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_scale_1"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:text="0.3"
                android:textSize="18sp"
                android:textStyle="bold" />
             <Button
                android:id="@+id/btn_scale_2"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:text="0.6"
                android:textSize="18sp"
                android:textStyle="bold" />
             <Button
                android:id="@+id/btn_scale_3"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_test_scale"
                android:layout_width="98dp"
                android:layout_height="48dp"
                android:text="测试缩放"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- 在适当位置添加位置控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_move_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_move_up"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="↑"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_move_down"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="↓"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_move_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="→"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全局透明度:"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"/>
            <SeekBar
                android:id="@+id/alphaSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/alphaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="透明度: 100%"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度调节:"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/seek_bar_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.5°C"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择身体部位:"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- 替换原有的身体部位按钮部分 -->
        <!-- 第一行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头部"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_neck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="颈部"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_chest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上身"
                android:textSize="12sp"
                android:backgroundTint="#444444" />
        </LinearLayout>

        <!-- 第二行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_left_shoulder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左肩膀"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_left_arm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左臂"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_left_hand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左手"
                android:textSize="12sp"
                android:backgroundTint="#444444" />
        </LinearLayout>

        <!-- 第三行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_right_shoulder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右肩膀"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_right_arm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右臂"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_right_hand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右手"
                android:textSize="12sp"
                android:backgroundTint="#444444" />
        </LinearLayout>

        <!-- 第四行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_left_thigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左腿"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_left_leg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左脚"
                android:textSize="12sp"
                android:backgroundTint="#444444" />
        </LinearLayout>

        <!-- 第五行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_right_thigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右腿"
                android:textSize="12sp"
                android:backgroundTint="#444444" />

            <Button
                android:id="@+id/btn_right_leg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右脚"
                android:textSize="12sp"
                android:backgroundTint="#444444" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>